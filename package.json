{
  "name": "loggin-js",
  "version": "1.9.0",
  "description": "A customizable and expandable logger for NodeJS and the browser",
  "author": {
    "name": "nombrekeff",
    "email": "manoloedge96@gmail.com",
    "url": "https://github.com/nombrekeff"
  },
  "bugs": {
    "url": "https://github.com/loggin-js/logging-js/issues/new/choose",
    "email": "manoloedge96@gmail.com"
  },
  "homepage": "https://github.com/loggin-js/loggin-js/wiki",
  "license": "MIT",
  "files": [
    "src/*",
    "README.md",
    "index.d.ts",
    "CHANGELOG.md"
  ],
  "keywords": [
    "logging",
    "logger",
    "severity",
    "filtering",
    "nodejs",
    "logs",
    "file",
    "remote",
    "file",
    "js",
    "colored",
    "http",
    "memory",
    "expandable",
    "customizable"
  ],
  "repository": "git://github.com/loggin-js/loggin-js.git",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test-server": "node test-remote/server.js",
    "examples": "node examples/basic-example.js && node examples/file-logging.js && node examples/log-info.js && node examples/custom-formatter.js",
    "release": "npm run build:browser && git push --follow-tags origin master && npm publish",
    "lint": "eslint",
    "standard-version": "standard-version",
    "coverage": "jest-coverage-badges output \"./.github/badges\""
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "phin": "^3.6.0",
    "strif": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "eslint": "^7.29.0",
    "husky": "^1.3.1",
    "jest": "^26.4.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-node": "^24.9.0",
    "size-limit": "^3.0.1",
    "standard-version": "^7.1.0"
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "src/lib/**/{!(ignore-me),}.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "limit": "182.2 KB",
      "gzip": false,
      "ignore": [
        "fs"
      ]
    },
    {
      "path": "src/lib/logger.js",
      "limit": "34.06 KB",
      "gzip": false
    },
    {
      "path": "src/lib/notifier.js",
      "limit": "30.94 KB",
      "gzip": false,
      "ignore": [
        "fs"
      ]
    },
    {
      "path": "src/lib/log.js",
      "limit": "29 KB",
      "gzip": false
    },
    {
      "path": "src/lib/severity.js",
      "limit": "689 B",
      "gzip": false
    },
    {
      "path": "src/lib/formatter.js",
      "limit": "27.83 KB",
      "gzip": false
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run coverage"
    }
  }
}
